{
  "manifest_version": 3,
  "name": "Price Comparator",
  "version": "1.0",
  "description": "Compare prices of items between Amazon and Best Buy.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
